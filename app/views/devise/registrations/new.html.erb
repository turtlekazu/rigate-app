<%= render "shared/header" %>

<div class="main">
  <div class="back-image">
    <div class="catch-copy">No more spaghetti codes.</div>
    <div class="sign-in-up">
      <h2 class="h2-title">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'email-field' %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email-field' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'password-field' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'password-field' %>
        </div>

        <label class="submit-button">
          <div class="login-button-block">
            <div class="login-button">
              <div class="login-button-text">新規登録</div>
              <%= f.submit class: "hidden" %>
            </div>
          </div>
        </label>
      <% end %>

      <div class="shared-links"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
