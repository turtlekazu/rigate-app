<%= render "shared/header" %>

<div class="main">
  <% if user_signed_in? && current_user.admin? %>
    <ul class="new-link-list">
      <li class="new-link"><%= link_to 'new_content', new_curriculum_content_path(@curriculum) %></li>
      <li class="new-link"><%= link_to 'new_exam', new_curriculum_exam_path(@curriculum) %></li>
    </ul>
  <% end %>
  
  <div class="main-back-image">
    <div class="catch-copy">No more spaghetti codes.</div>
    <div class="content-board">

      <div class="menu-name"><%= @menu.name %></div>
      <div class="menu-pasta-name-content"><%= @menu.pasta_name %></div>
      <div class="menu-pasta-image-top-content"><%= image_tag @menu.image.variant(resize: '80x80') %></div>

      <div class="curriculum-button-mini">
        <div class="curriculum-name-mini"><%= @curriculum.name %></div>
      </div>
      
      <div class="content-each-board">
        <div class="contents-list">
          <% @contents.each do |content| %>
            <div class="content-title"><%= content.title %></div>
            <div class="content-text"><%= content.text %></div>
          <% end %>
        </div>
      </div>

      <% if @exam != nil %>
        <%= link_to new_curriculum_exam_response_path(@curriculum) do %>
          <div class="next-button">
            <div class="next-button-text">NEXTâ†’</div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>