<%= render "shared/header" %>

<div class="main">
  <% if user_signed_in? && current_user.admin? %>
    <ul class="new-link-list">
      <li class="new-link"><%= link_to "new_menu", new_menu_path %></li>
    </ul>
  <% end %>

  <div class="back-image">
    <div class="catch-copy">No more spaghetti codes.</div>

    <div class="menu-list">
      <% @menus.each do |menu| %>
        <%= link_to menu_path(menu) do %>
          <div class="menu-tile">
            <div class="menu-name"><%= menu.name %></div>
            <div class="menu-pasta-name"><%= menu.pasta_name %></div>
            <div class="menu-pasta-image"><%= image_tag menu.image.variant(resize: '80x80') %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
